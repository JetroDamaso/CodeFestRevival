<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0E1214"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/testLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_semibold"
            android:text="Login to Phobook."
            android:textColor="#fff1f1"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans"
            android:text="Email"
            android:textColor="#fff1f1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:textColor="#fff1f1"
            android:textColorHint="#6BFFFFFF"
            android:layout_height="48dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/inputbackground"
            android:ems="10"
            android:fontFamily="@font/nunito_sans"
            android:hint="email@gmail.com"
            android:inputType="text"
            android:paddingStart="15dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans"
            android:text="Password"
            android:textColor="#fff1f1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="#fff1f1"
            android:textColorHint="#6BFFFFFF"
            android:fontFamily="@font/nunito_sans"
            android:layout_marginTop="3dp"
            android:background="@drawable/inputbackground"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="15dp" />

        <TextView
            android:id="@+id/textWrongCreds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_sans"
            android:visibility="invisible"
            android:gravity="end"
            android:text="Invalid Email and Password. Please try again."
            android:textColor="#ffa2a9"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/nunito_sans_semibold"
            android:gravity="center"
            android:text="Forgot Password?"
            android:textColor="#f93a52"
            android:textSize="14sp" />
        <Button
            android:id="@+id/signInButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_vertical|start|end"
            android:layout_marginTop="25dp"
            android:background="@drawable/buttonbackground"
            android:fontFamily="@font/nunito_sans_semibold"
            android:text="Sign in"
            android:textColor="#4e0314" />

        <TextView
            android:id="@+id/createAccountMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/nunito_sans"
            android:gravity="center"
            android:text="Don't have an account yet?"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/createAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:fontFamily="@font/nunito_sans_semibold"
            android:gravity="center"
            android:text="Create account."
            android:textColor="#f93a52"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

</LinearLayout>